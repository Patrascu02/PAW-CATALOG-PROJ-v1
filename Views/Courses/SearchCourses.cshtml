<form asp-action="SearchCourses" method="get" class="mb-3">
    <div class="mb-3">
        <label for="query" class="form-label">Search by course name or professor</label>
        <input type="text" id="query" name="query" class="form-control" value="@Context.Request.Query["query"]" placeholder="Enter course or professor" />
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>
