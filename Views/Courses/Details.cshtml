@model PAW_CATALOG_PROJ.Models.Course

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <h1 class="mb-4 text-info fw-bold">Course Details</h1>

    <div class="bg-white p-4 rounded shadow-sm mb-4">
        <h4 class="mb-3">Course Information</h4>
        <hr />
        <dl class="row fs-5">
            <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.CourseName)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CourseName)</dd>
        </dl>
    </div>

    <div class="d-flex gap-3">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary btn-lg shadow">
            Edit
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
            Back to List
        </a>
    </div>
</div>
