@model PAW_CATALOG_PROJ.Models.Course

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <h1 class="mb-4 text-danger fw-bold">Delete Course</h1>

    <h3 class="mb-3 text-secondary">Are you sure you want to delete this?</h3>

    <div class="bg-light p-4 rounded shadow-sm mb-4">
        <h4 class="mb-3">Course Details</h4>
        <hr />
        <dl class="row fs-5">
            <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.CourseName)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CourseName)</dd>
        </dl>
    </div>

    <form asp-action="Delete" class="d-flex align-items-center gap-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger btn-lg shadow">
            Delete
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
            Cancel
        </a>
    </form>
</div>
