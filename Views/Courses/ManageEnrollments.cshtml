@model PAW_CATALOG_PROJ.Models.Course

@{
    ViewData["Title"] = "Manage Enrollments for " + Model.CourseName;
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AddEnrollment" method="post">
    <input type="hidden" name="CourseId" value="@Model.Id" />

    <div class="form-group">
        <label for="StudentId">Student</label>
        <select class="form-control" id="StudentId" name="StudentId" required>
            <option value="">-- Select Student --</option>
            @foreach (var student in (SelectList)ViewBag.AllStudents)
            {
                <option value="@student.Value">@student.Text</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="TeacherId">Profesor</label>
        <select class="form-control" id="TeacherId" name="TeacherId" required>
            <option value="">-- Select Profesor --</option>
            @foreach (var teacher in (SelectList)ViewBag.AllTeachers)
            {
                <option value="@teacher.Value">@teacher.Text</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="GroupId">Grupa</label>
        <select class="form-control" id="GroupId" name="GroupId" required>
            <option value="">-- Select Grupa --</option>
            @foreach (var group in (SelectList)ViewBag.Groups)
            {
                <option value="@group.Value">@group.Text</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="EnrollmentYear">Anul de studiu</label>
        <select class="form-control" id="EnrollmentYear" name="EnrollmentYear" required>
            <option value="">-- Select Anul --</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Adaugă înscriere</button>
</form>
