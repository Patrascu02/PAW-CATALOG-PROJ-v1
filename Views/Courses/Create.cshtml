@model PAW_CATALOG_PROJ.Models.Course

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <h1 class="mb-4 text-primary fw-bold">Create New Course</h1>

    <h4 class="mb-3">Course Details</h4>
    <hr class="mb-4" />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-4">
                    <label asp-for="CourseName" class="form-label fw-semibold"></label>
                    <input asp-for="CourseName" class="form-control form-control-lg shadow-sm" placeholder="Enter course name" />
                    <span asp-validation-for="CourseName" class="text-danger fst-italic"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-primary btn-lg shadow">
                        Create
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
