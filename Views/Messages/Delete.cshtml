@model PAW_CATALOG_PROJ.Models.Message

@{
    ViewData["Title"] = "Delete Message";
}

<h1 class="mb-4 text-danger">Delete Message</h1>

<h3 class="mb-3">Are you sure you want to delete this message?</h3>

<div class="card shadow-sm p-4 mb-4">
    <h4 class="mb-3">Message Details</h4>
    <dl class="row">
        <dt class="col-sm-3 fw-semibold">
            @Html.DisplayNameFor(model => model.From)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.From.Email)
        </dd>

        <dt class="col-sm-3 fw-semibold">
            @Html.DisplayNameFor(model => model.Recipient)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Recipient.Email)
        </dd>

        <dt class="col-sm-3 fw-semibold">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Content)
        </dd>
    </dl>

    <form asp-action="Delete" class="d-flex align-items-center gap-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger px-4">Delete</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </form>
</div>
