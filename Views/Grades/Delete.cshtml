@model PAW_CATALOG_PROJ.Models.Grade

@{
    ViewData["Title"] = "Delete Grade";
}

<div class="container mt-5">
    <h1 class="text-danger fw-bold mb-3">Delete Grade</h1>

    <h4 class="mb-4">Are you sure you want to delete this grade?</h4>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.Enrollment)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Enrollment.Id)
                </dd>

                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Title)
                </dd>

                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.GradeValue)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.GradeValue)
                </dd>

                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.DateRecorded)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.DateRecorded)
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="d-flex align-items-center gap-3">
        <input type="hidden" asp-for="GradeId" />
        <button type="submit" class="btn btn-danger px-4">Delete</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </form>
</div>
