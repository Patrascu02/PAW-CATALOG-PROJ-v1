@model PAW_CATALOG_PROJ.Models.Grade

@{
    ViewData["Title"] = "Edit Grade";
}

<div class="container mt-5">
    <h1 class="mb-4 text-primary fw-bold">Edit Grade</h1>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="GradeId" />

                <div class="mb-3">
                    <label asp-for="EnrollmentId" class="form-label"></label>
                    <select asp-for="EnrollmentId" class="form-select" asp-items="ViewBag.EnrollmentId"></select>
                    <span asp-validation-for="EnrollmentId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="GradeValue" class="form-label"></label>
                    <input asp-for="GradeValue" class="form-control" />
                    <span asp-validation-for="GradeValue" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DateRecorded" class="form-label"></label>
                    <input asp-for="DateRecorded" class="form-control" />
                    <span asp-validation-for="DateRecorded" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
