@model PAW_CATALOG_PROJ.Models.Grade

@{
    ViewData["Title"] = "Grade Details";
}

<div class="container mt-5">
    <h1 class="text-info fw-bold mb-3">Grade Details</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.Enrollment)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Enrollment.Id)
                </dd>

                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Title)
                </dd>

                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.GradeValue)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.GradeValue)
                </dd>

                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.DateRecorded)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.DateRecorded)
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 d-flex gap-3">
        <a asp-action="Edit" asp-route-id="@Model?.GradeId" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </div>
</div>
