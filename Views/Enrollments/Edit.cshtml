@model PAW_CATALOG_PROJ.Models.Enrollment

@{
    ViewData["Title"] = "Edit Enrollment";
}

<div class="container mt-5">
    <h1 class="text-primary fw-bold mb-4">Edit Enrollment</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="StudentId" class="form-label fw-semibold"></label>
                    <select asp-for="StudentId" class="form-select" asp-items="ViewBag.StudentId"></select>
                    <span asp-validation-for="StudentId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CourseId" class="form-label fw-semibold"></label>
                    <select asp-for="CourseId" class="form-select" asp-items="ViewBag.CourseId"></select>
                    <span asp-validation-for="CourseId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TeacherId" class="form-label fw-semibold"></label>
                    <select asp-for="TeacherId" class="form-select" asp-items="ViewBag.TeacherId"></select>
                    <span asp-validation-for="TeacherId" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="GroupId" class="form-label fw-semibold"></label>
                    <select asp-for="GroupId" class="form-select" asp-items="ViewBag.GroupId"></select>
                    <span asp-validation-for="GroupId" class="text-danger"></span>
                </div>

                <div class="d-flex gap-3">
                    <input type="submit" value="Save" class="btn btn-success btn-lg shadow-sm" />
                    <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
