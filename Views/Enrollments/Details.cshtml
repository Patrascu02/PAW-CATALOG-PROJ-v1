@model PAW_CATALOG_PROJ.Models.Enrollment

@{
    ViewData["Title"] = "Enrollment Details";
}

<div class="container mt-5">
    <h1 class="mb-4 text-info fw-bold">Enrollment Details</h1>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.Student)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Student.Email)
                </dd>

                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.Course)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Course.CourseName)
                </dd>

                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.Teacher)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Teacher.Email)
                </dd>

                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.Group)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Group.GroupNumber)
                </dd>
            </dl>
        </div>
    </div>

    <div class="d-flex gap-3">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary btn-lg shadow-sm">Edit</a>
        <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">Back to List</a>
    </div>
</div>
