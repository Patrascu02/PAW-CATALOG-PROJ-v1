@model IEnumerable<PAW_CATALOG_PROJ.Models.Enrollment>

@{
    ViewData["Title"] = "Enrollments by Course";
}

<div class="container mt-5">
    <h2 class="text-primary mb-4">Enrollments for Course @ViewBag.CourseId</h2>

    <table class="table table-bordered table-striped shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Student</th>
                <th>Teacher</th>
                <th>Group</th>
                <th>Enrollment Year</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var enrollment in Model)
            {
                <tr>
                    <td>@enrollment.Student?.Email ?? "No student"</td>
                    <td>@enrollment.Teacher?.Name ?? "No teacher"</td>
                    <td>@enrollment.Group?.GroupNumber.ToString() ?? "No group"</td>
                    <td>@enrollment.EnrollmentYear</td>
                </tr>
            }
        </tbody>
    </table>
</div>
