@model PAW_CATALOG_PROJ.Models.Enrollment

@{
    ViewData["Title"] = "Create Enrollment";
}

<div class="container mt-5">
    <h1 class="mb-4 text-primary fw-bold">Create Enrollment</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="StudentId" class="form-label fw-semibold"></label>
                    <select asp-for="StudentId" class="form-select" asp-items="ViewBag.StudentId"></select>
                </div>

                <div class="mb-3">
                    <label asp-for="CourseId" class="form-label fw-semibold"></label>
                    <select asp-for="CourseId" class="form-select" asp-items="ViewBag.CourseId"></select>
                </div>

                <div class="mb-3">
                    <label asp-for="TeacherId" class="form-label fw-semibold"></label>
                    <select asp-for="TeacherId" class="form-select" asp-items="ViewBag.TeacherId"></select>
                </div>

                <div class="mb-3">
                    <label asp-for="GroupId" class="form-label fw-semibold"></label>
                    <select asp-for="GroupId" class="form-select" asp-items="ViewBag.GroupId"></select>
                </div>

                <div class="d-grid">
                    <input type="submit" value="Create" class="btn btn-success btn-lg shadow-sm" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
