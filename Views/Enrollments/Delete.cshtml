@model PAW_CATALOG_PROJ.Models.Enrollment

@{
    ViewData["Title"] = "Delete Enrollment";
}

<div class="container mt-5">
    <h1 class="mb-4 text-danger fw-bold">Delete Enrollment</h1>

    <h5 class="text-warning">Are you sure you want to delete this enrollment?</h5>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.Student)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Student.Email)
                </dd>

                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.Course)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Course.CourseName)
                </dd>

                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.Teacher)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Teacher.Email)
                </dd>

                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.Group)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Group.GroupNumber)
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="d-flex align-items-center gap-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger btn-lg shadow-sm">Delete</button>
        <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">Back to List</a>
    </form>
</div>
