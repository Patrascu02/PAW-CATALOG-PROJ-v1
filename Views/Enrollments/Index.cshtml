@model IEnumerable<PAW_CATALOG_PROJ.Models.Enrollment>
@using Microsoft.AspNetCore.Identity
@using System.Security.Claims

@{
    ViewData["Title"] = "Enrollment List";
    var isModerator = User.IsInRole("Moderator");
}

<div class="container mt-5">
    <h1 class="text-primary fw-bold mb-4">Enrollment List</h1>

    <div class="mb-4">
        <a asp-action="Create" class="btn btn-success btn-lg shadow-sm">Add New Enrollment</a>
    </div>

    <table class="table table-bordered table-striped shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Student)</th>
                <th>@Html.DisplayNameFor(model => model.First().Course)</th>
                <th>@Html.DisplayNameFor(model => model.First().Teacher)</th>
                <th>@Html.DisplayNameFor(model => model.First().Group)</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Student?.Email</td>
                    <td>@item.Course?.CourseName</td>
                    <td>@item.Teacher?.Email</td>
                    <td>@item.Group?.GroupNumber</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-1">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm me-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm me-1">Delete</a>

                        @if (isModerator)
                        {
                            <button type="button" class="btn btn-secondary btn-sm"
                                    onclick="alert('Teacher ID: @item.TeacherId')">
                                View Teacher ID
                            </button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
