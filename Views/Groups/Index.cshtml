@model IEnumerable<PAW_CATALOG_PROJ.Models.Group>

@{
    ViewData["Title"] = "Index";
}

<h1>Groups</h1>

@if (User.IsInRole("Secretar"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Adaugă Grupă Nouă</a>
    </p>
}
<p>
    <a asp-action="searchGroups">Search Groups</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GroupNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GroupNumber)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                <a asp-action="StudentList" asp-route-id="@item.Id">See student list</a>
            </td>
        </tr>
}
    </tbody>
</table>
