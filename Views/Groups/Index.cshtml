@model IEnumerable<PAW_CATALOG_PROJ.Models.Group>

@{
    ViewData["Title"] = "Groups";
}

<div class="container mt-5">
    <h1 class="mb-4">Groups</h1>

    @if (User.IsInRole("Secretar"))
    {
        <p>
            <a asp-action="Create" class="btn btn-primary">Add New Group</a>
        </p>
    }

    <p>
        <a asp-action="searchGroups" class="btn btn-link">Search Groups</a>
    </p>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.GroupNumber)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.GroupNumber)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary me-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger me-1">Delete</a>
                        <a asp-action="StudentList" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">See Student List</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
